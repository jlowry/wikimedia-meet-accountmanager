#!/bin/sh
# postinst script for meet-accountmanager
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see https://www.debian.org/doc/debian-policy/ or
# the debian-policy package

SUDOERS_FILE=/etc/sudoers.d/meet-accountmanager
CONFIG_DIR=/etc/meet-accountmanager
SALT_FILE="$CONFIG_DIR/salt"
TOKEN_FILE="$CONFIG_DIR/password"
KEY_FILE="$CONFIG_DIR/key"
USER=meet-accountmanager
STATE_DIR=/var/lib/meet-accountmanager
DATABASE_FILE="$STATE_DIR/state.sqlite3"
LOG_DIR=/var/log/meet-accountmanager

case "$1" in
    configure)
	adduser --quiet --system --home "$STATE_DIR" --group $USER
	if [ ! -d "$STATE_DIR" ]; then
	    mkdir -p "$STATE_DIR" \
	    && echo "Created state dir $STATE_DIR" \
	    && chown -R $USER:$USER "$STATE_DIR"
	fi
	if [ -d "$STATE_DIR" -a ! -f "$DATABASE_FILE" ]; then
        cd $STATE_DIR
	    /usr/bin/python3 /usr/lib/python3/dist-packages/meet_accountmanager/create_database.py \
	    && chown -R $USER:$USER "$DATABASE_FILE"
	fi
	if [ ! -d "$LOG_DIR" ]; then
	    mkdir -p "$LOG_DIR" \
	    && echo "Created log dir $LOG_DIR" \
	    && chown -R $USER:$USER "$LOG_DIR"
	fi
	if [ ! -d "$CONFIG_DIR" ]; then
	    mkdir -p "$CONFIG_DIR" \
	    && echo "Created config dir $CONFIG_DIR"
	fi
	if [ -d "$CONFIG_DIR" ] && ! [ -f "$SALT_FILE" -a -f "$TOKEN_FILE" ]; then
	    cd $CONFIG_DIR
	    (umask 026; /usr/bin/python3 /usr/lib/python3/dist-packages/meet_accountmanager/create_ticketmaster_token.py) \
	    && chown root:$USER "$SALT_FILE" "$TOKEN_FILE"
	fi
	if [ -d "$CONFIG_DIR" -a ! -f "$KEY_FILE" ]; then
	    cd $CONFIG_DIR
	    (umask 026; /usr/bin/python3 /usr/lib/python3/dist-packages/meet_accountmanager/create_flask_key.py) \
	    && chown root:$USER "$KEY_FILE"
	fi
	SUDOER=$(cat <<-'EOF'
		Defaults:meet-accountmanager !requiretty
		meet-accountmanager ALL=(prosody) NOPASSWD:/usr/bin/prosodyctl
		EOF
	)
#	SUDOER=$('meet-accountmanager ALL=(prosody) NOPASSWD:/usr/bin/prosodyctl')
        echo "$SUDOER" | visudo -qc -f - && \
	echo "$SUDOER" > "$SUDOERS_FILE" && \
	chmod 440 "$SUDOERS_FILE"
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
